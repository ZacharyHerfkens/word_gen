%classes {
    Cons: n m l s p t k w j;
    Vowel: a i e o u;
    Coda: n s m l;
}

%patterns {
    Mid: Cons Vowel Coda?;
    Start: Cons?90 Vowel Coda?;
}

%replacements {
    j |(i, e)| => (a, o, u);
    w |(u, o)| => (a, i, e);
    %any@cpy cpy{1..} => cpy;
    (Cons Vowel)@CV CV{1..} => %reject;
}

%words {
    Start Mid{0..2};
}
%phonemes: a e i j k l m n o p s t u w;

%classes {
    Cons: n m l s p t k w j;
    Vowel: a i e o u;
    Coda: n s m l;
}

%patterns {
    Mid: Cons Vowel Coda?;

    # The start syllable can apear optionally without an Onset
    Start: Cons?90 Vowel Coda?;
}

%words {
    # A Start syllable followed by zero to two Mid syllables
    Start Mid{0..2};
}

%filters {
    j <(i, e)> => (a, o, u);
    w <(u, o)> => (a, i, e);
    (Cons Vowel)@CV CV{1..};
}